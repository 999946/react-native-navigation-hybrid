<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="这是一个原生页面"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="请输入要返回的结果"
        android:textSize="14dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_input"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <TextView
        android:id="@+id/send_result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="返回结果"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/push_to_react"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="push 到 React Native 页面"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/push_to_native"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="push 到 native 页面"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/replace_with_react"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="替换成 ReactNative 页面"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/replace_all_with_one_react"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="替换所有页面为一个 ReactNative 页面"
        android:textColor="@color/touchable_opacity_font_color" />


</LinearLayout>