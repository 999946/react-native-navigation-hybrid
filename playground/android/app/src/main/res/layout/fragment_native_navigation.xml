<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="这是一个原生页面"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/push_to_native"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="push 到原生页面"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/push_to_react"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"

        android:text="push 到 RN 页面"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/pop_to_root"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="popToRoot"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/request_from_react"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="请求 React Native 返回结果"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/request_from_native"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="请求 native 返回结果"
        android:textColor="@color/touchable_opacity_font_color" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="13dp" />

</LinearLayout>